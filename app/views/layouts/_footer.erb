<footer>

  <%# 상단 %>
  <div class="us_info">
    <div class="container">
      <div class="row">

        <%# Company Info %>
        <div class="col-md-3">
          <div class="headline">
            <h2>Company Info</h2>
          </div>
          <div>
            <ul class="company_ul">
            <%#
              <li>
                <a href="#">Oppabox Crop.</a>
              </li>
            %>

              <li>
                <a href="/terms"><%= t('company_agreement_link') %></a>
              </li>
                
              <li>
                <% if params[:lo] != "zh"%>
                <a href="/privacy"><%= t('company_privacy_link') %></a>
                <%end%>
              </li>
            </ul>
          </div>
        </div>

        <%# Contact Us %>
        <div class="col-md-3">
          <div class="headline">
            <h2>Contact Us</h2>
          </div>
          <div>
            <ul class="contact_ul">
              <li>
                <p>Call. 02-794-5558</p>
              </li>
              
              <li>
                <p>Email. privacy@oppabox.com</p>
              </li>

              <li>
                <p>
                  Address.
                  <br>
                  <%= t('company_address') %>
                </p>
              </li>

            </ul>
          </div>
        </div>

        <div class="col-md-3">
          <div class="headline">
            <h2>Supplier</h2>
          </div>
          <div>
            <ul>
              <li>
                <img src="<%= asset_path 'allat.png' %>" width="60">
                &nbsp;
                
                <img src="<%= asset_path 'ups.gif' %>" width="40">
              </li>
            </ul>
          </div>
        </div>

        <%# Follow Us %>
        <div class="col-md-3">
          <div class="headline">
            <h2>Follow Us</h2>
          </div>
          <div>
            <ul>
              <li>
                  <a class="btn btn-social-icon btn-facebook" href="http://goo.gl/g4zQ51" target="sub"><i class="fa fa-facebook"></i></a>
                  <a class="btn btn-social-icon btn-instagram" href="http://instagram.com/oppabox" target="sub"><i class="fa fa-instagram"></i></a>
                  <a class="btn btn-social-icon btn-twitter" href="http://twitter.com/oppabox" target="sub"><i class="fa fa-twitter"></i></a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# 하단 %>
  <div class="container company_box">
    <div class="row">
      <p class="company_txt text-left">
        <%= t('company_name') %> | <%= t('ceo') %><%= t('company_privacy') %>
        <% if I18n.locale == :ko %>
        <%= t('registration_number') %>
        <% end %>
        <%= t('company_address') %>
      </p>
      <div>
        <p class="copyright_txt text-left"><%= t('company_copyright').html_safe %>.</p>
      </div>
    </div>
  </div>

</footer>