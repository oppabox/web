<div class="container">
  <h2 class="text-center form-signin-heading"><%= t('menu_renew_password') %></h2>
  <hr>
  <div class="form-signin" role="form">
    <label><%= t('renew_password') %></label>
    <input id="signin_email" type="password" class="form-control" required autofocus>
    <div style="height:20px;">&nbsp;</div>
    <label><%= t('renew_password_confirm')%></label>
    <input id="signin_password" type="password" class="form-control" required>
    <button class="btn btn-lg btn-primary btn-block" id="signin_button"><%= t('renew_password_button') %></button>
  </div>
</div> <!-- /container -->
