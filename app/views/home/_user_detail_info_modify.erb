<div class="row">
  <div class="col-md-4 col-xs-6">
    <label><%= t('user_detail_recipient') %></label>
    <input name="allat_recp_nm" id="signup_name" value="<%=current_user.name || ""%>" style="width:90%" type="text" class="form-control" placeholder="<%= t('user_detail_recipient_name') %>" required autofocus>
  </div>
</div>
<div style="height:20px;">&nbsp;</div>
<div class="row">
  <div class="col-md-4 col-xs-6">
    <label><%= t('signup_step3_phonenumber') %></label>
    <input name="phonenumber" id="signup_phonenumber" value="<%=current_user.phonenumber || ""%>" style="width:90%" type="text" class="form-control" placeholder="<%= t('signup_step3_phonenumber') %>" required>
  </div>
  <div class="col-md-4 col-xs-6">
    <label><%= t('signup_step3_postcode') %></label>
    <input name="postcode" id="signup_postcode" value="<%=current_user.postcode || ""%>" style="width:90%;" type="text" class="form-control" placeholder="<%= t('signup_step3_postcode') %>" required>
  </div>
</div>
<div style="height:20px;">&nbsp;</div>
<label><%= t('signup_step3_nationality') %></label>
<select name="country" id="signup_country" class="form-control" onChange="changePayment();">
  <% COUNTRIES.sort_by { |x, y| x }.each do |m, n| %>
    <% selected = "" %>
    <% country = current_user.country || "KR"%>
    <% if n.to_s == country %>
      <% selected = %Q[selected="selected"] %>
    <% end %>
    <option value="<%= n %>" <%= selected.html_safe %>><%= m %></option>
  <% end %>
</select>
<div style="height:20px;">&nbsp;</div>
<label><%= t('signup_step3_address') %></label>
<div class="row">
  <div class="col-md-12 col-xs-12" style="margin-top:10px;">
    <input name="allat_recp_addr" id="signup_address" type="text" value="<%=current_user.address || ""%>" class="form-control" placeholder="<%= t('signup_step3_address') %>" required>
  </div>
</div>
