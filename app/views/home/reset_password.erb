<div class="container">
  <h2 class="text-center form-signin-heading"><%= t('menu_reset_password') %></h2>
  <hr>
  <div class="form-signin" role="form">
    <p><%= t('reset_description') %></p>
    <div style="height:20px;">&nbsp;</div>
    <label><%= t('login_email_address') %></label>
    <input id="signin_email" type="email" class="form-control" required autofocus>
    <button class="btn btn-lg btn-primary btn-block" id="signin_button"><%= t('reset_password_button') %></button>
  </div>
</div> <!-- /container -->
