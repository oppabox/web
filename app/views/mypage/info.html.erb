<div class="container">
  <div class="row">
    <%= render :partial => "left_list" %>
    <div class="col-sm-10">
      <h4><%= t('signup_step3') %></h4>
      <hr>

      <div class="form-signin" role="form" style="max-width:480px;">
        <label><%= t('signup_step3_nationality') %></label>
        <select id="info_country" class="form-control" style="width:350px;" autofocus>
          <% COUNTRIES.sort_by { |x, y| x }.each do |m, n| %>
            <%if current_user.country.nil?%>
              <% selected = "" %>
              <% if n.to_s == "KR" %>
                <% selected = %Q[selected="selected"] %>
              <% end %>
            <% else %>
              <% selected = "" %>
              <% if n.to_s == current_user.country %>
                <% selected = %Q[selected="selected"] %>
              <% end %>
            <% end %>
            <option value="<%= n %>" <%= selected %>><%= m %></option>
          <% end %>
        </select>
        <div style="height:20px;">&nbsp;</div>
        <label><%= t('signup_step3_phonenumber') %></label>
        <input id="info_phonenumber" style="width:150px" type="text" class="form-control" placeholder="<%= t('signup_step3_phonenumber') %>" required value="<%=current_user.phonenumber%>">
        <div style="height:20px;">&nbsp;</div>
        <label><%= t('signup_step3_postcode') %></label>
        <input id="info_postcode" style="width:150px;" type="text" class="form-control" placeholder="<%= t('signup_step3_postcode') %>" required value="<%=current_user.postcode%>">
        <div style="height:20px;">&nbsp;</div>
        <label><%= t('signup_step3_address') %></label>
        <input id="info_address_1" type="text" class="form-control" placeholder="<%= t('signup_step3_address') %>" required value="<%=current_user.address_1%>">
        <input id="info_address_2" type="text" class="form-control" placeholder="<%= t('signup_step3_address') %>" required value="<%=current_user.address_2%>">
        <input id="info_address_3" type="text" class="form-control" placeholder="<%= t('signup_step3_address') %>" required value="<%=current_user.address_3%>">

        <div class="text-center" style="margin-top:30px;margin-bottom:50px;">
          <button id="info_button" type="button" class="btn btn-lg btn-primary">&nbsp;<%= t('signup_step3_complete')%>&nbsp;</button>
        </div>
      </div>
    </div>
  </div>
</div>
