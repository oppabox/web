<div class="well">
  <div class="row" style="margin-bottom:10px;font-weight:bold;font-size:16px;">
    <div class="col-md-4 col-xs-4 right-border"><p class="text-center">상품명</p></div>
    <div class="col-md-2 col-xs-2 right-border"><p class="text-center">판매가</p></div>
    <div class="col-md-2 col-xs-2 right-border"><p class="text-center">수량</p></div>
    <div class="col-md-2 col-xs-2 right-border"><p class="text-center">총 금액</p></div>
    <div class="col-md-2 col-xs-2"><p class="text-center">-</p></div>
  </div>
  <% if @orders.empty? %>
    <div class="row">
      <div class="col-md-12 col-xs-12"><p class="text-center">주문 내역이 없습니다</p></div>
    </div>
  <% else %>
    <% @orders.each do |o|%>
    <div class="row">
      <% item = o.item %>
      <div class="col-md-4 col-xs-4"><p class="text-center"><a href="/item/<%= item.path-%>"><%= item.display_name %></a></p></div>
      <div class="col-md-2 col-xs-2"><p class="text-center"><%= number_with_delimiter(item.sale_price) %></p></div>
      <div class="col-md-2 col-xs-2"><p class="text-center">
       <a href="#" class="order_minus"><button type="button" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></button></a>
     &nbsp;&nbsp;<%= o.quantity %>&nbsp;&nbsp;
       <a href="#"><button type="button" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button></a>
      
      </p></div>
      <div class="col-md-2 col-xs-2"><p class="text-center" ><%= number_with_delimiter(item.sale_price * o.quantity) %></p></div>
      <div class="col-md-2 col-xs-2"><p class="text-center"><a href="#" onclick="move_to_basket(<%=item.id%>);">취소</a></div>
    </div>
    <% end %>
  <% end %>
</div>
